<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.AccountFragment">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/color_accent" />

    <LinearLayout
        android:id="@+id/account_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/color_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:shapeAppearance="@style/ShapeAppearance.App.50PercentCircleImageView" />

            <TextView
                android:id="@+id/text_view_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_ui_text_bold"
                android:maxLines="3"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_text_regular"
                android:text="Email"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="abcd@android.com"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_text_regular"
                android:text="Phone"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="900-900-9000"
                android:textSize="16sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="Update Details"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_navigate_next" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="Change Password"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_navigate_next" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="Sign Out"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_navigate_next" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sign_out_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sf_ui_text_medium"
                android:text="Sign Out All Devices"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_navigate_next" />
        </FrameLayout>

    </LinearLayout>


</FrameLayout>